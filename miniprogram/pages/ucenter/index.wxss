.userinfo{
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  margin-bottom: 20rpx;
}
.menu-list{
  padding:20rpx;
  background-color:#fff;
  text-align:left;
  width:100%;
  border-bottom: 1px solid #ddd;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 14rpx;
  background-position: 710rpx center;
}
.menu-list .icon{float: right;}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}
.login-btn{
  margin-left:0;
  height:65rpx;
  border-radius:50rpx;
  border:1rpx solid #ff9900;
  color:#ff9900;
  background:none;
  line-height:65rpx;
  font-size:30rpx;
}