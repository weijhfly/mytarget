/**index.wxss**/
page{
 background: #fff; 
}
.detail-content{
 width:100%;
 align-items:left;
 padding:50rpx 30rpx;
}
.title{
  text-align: center;
  font-size:45rpx;
  margin-bottom:30rpx;
}
.detail-content text{
  display: block;
}
.tip{
  color: #999;
  margin: 300rpx 0 100rpx;
}
.slide{
	animation-duration: 1s;
  animation-delay: 0s;
  animation-iteration-count: 1;
	animation-name: slide;
}
@keyframes slide{
	from {
	 transform: translateX(100%);
	} 
	to {
	 transform: translateX(0);
	}
}